#!/bin/sh

# IP of the server
ip=217.197.81.42

# What do we want to look at
center=1626440000
rate=250000

pdir=$(cd $(dirname $0);pwd)

if [ "$1" = "process" ] ; then
    nc $ip 1234 | $pdir/extractor.py -c $center -r $rate -f rtl --jobs=2
    echo "Processor died"
    exit 0
fi

if [ "$1" = "server" ] ; then
	rtl_tcp -a 0.0.0.0 -f $center -g 50 -s $rate
    echo "Server shut down"
    exit 0
fi
